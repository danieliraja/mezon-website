---
import '../styles/global.css';
const { title = 'Mezon' } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <div class="relative flex min-h-screen flex-col overflow-hidden">
      <div class="pointer-events-none absolute inset-0 -z-10">
        <div class="absolute -left-32 top-24 h-80 w-80 rounded-full bg-sky-500/20 blur-3xl"></div>
        <div class="absolute right-[-10rem] top-1/3 h-96 w-96 rounded-full bg-sky-400/10 blur-3xl"></div>
        <div class="absolute bottom-[-6rem] left-1/2 h-96 w-[28rem] -translate-x-1/2 rounded-full bg-sky-500/10 blur-3xl"></div>
      </div>

      <header class="sticky top-0 z-40 border-b border-slate-800/60 bg-slate-950/80 backdrop-blur supports-[backdrop-filter]:bg-slate-950/60">
        <div class="mx-auto flex h-16 max-w-6xl items-center justify-between px-6">
          <a href="/" class="text-lg font-semibold tracking-tight text-slate-100">Mezon</a>
          <nav class="hidden items-center gap-8 text-sm font-medium text-slate-300 md:flex">
            <a href="/" class="hover:text-sky-300">Home</a>
            <a href="/services" class="hover:text-sky-300">Serviços</a>
            <a href="/contact" class="hover:text-sky-300">Contato</a>
          </nav>
          <a
            href="/contact"
            class="hidden rounded-full border border-sky-500/40 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-sky-300 shadow-sm shadow-slate-900/40 transition hover:border-sky-400/60 hover:text-sky-200 md:inline-flex"
          >
            Fale com a gente
          </a>
          <button class="inline-flex items-center justify-center rounded-full border border-slate-700/80 p-2 text-slate-400 md:hidden" aria-label="Abrir menu">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7h16M4 12h16M4 17h16" />
            </svg>
          </button>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-slate-800/60 bg-slate-950/80">
        <div class="mx-auto flex max-w-6xl flex-col gap-6 px-6 py-10 text-sm text-slate-400 md:flex-row md:items-center md:justify-between">
          <div>
            <h4 class="text-base font-semibold text-slate-100">Mezon</h4>
            <p class="mt-1 max-w-sm text-slate-400">
              Produtos digitais pensados para gerar confiança, eficiência e crescimento sustentável.
            </p>
          </div>
          <div class="flex items-center gap-4 text-xs uppercase tracking-[0.2em] text-slate-500">
            <span>© {new Date().getFullYear()} Mezon</span>
            <span class="hidden h-0.5 w-8 rounded-full bg-slate-700 md:block"></span>
            <span>Todos os direitos reservados</span>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
