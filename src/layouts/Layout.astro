---
import '../styles/global.css';
const { title = 'Mezon' } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
    <div class="relative flex min-h-screen flex-col overflow-hidden">
      <div class="pointer-events-none absolute inset-0 -z-10">
        <div class="absolute -left-32 top-24 h-80 w-80 rounded-full bg-sky-500/20 blur-3xl"></div>
        <div class="absolute right-[-10rem] top-1/3 h-96 w-96 rounded-full bg-sky-400/10 blur-3xl"></div>
        <div class="absolute bottom-[-6rem] left-1/2 h-96 w-[28rem] -translate-x-1/2 rounded-full bg-sky-500/10 blur-3xl"></div>
      </div>

      <header class="sticky top-0 z-40 border-b border-slate-800/60 bg-slate-950/80 backdrop-blur supports-[backdrop-filter]:bg-slate-950/60">
        <div class="mx-auto flex h-16 max-w-6xl items-center justify-between px-6">
          <a href="/" class="text-lg font-semibold tracking-tight text-slate-100">Mezon</a>
          <nav class="hidden items-center gap-8 text-sm font-medium text-slate-300 md:flex">
            <a href="/" class="hover:text-sky-300">Home</a>
            <a href="/services" class="hover:text-sky-300">Serviços</a>
            <a href="/contact" class="hover:text-sky-300">Contato</a>
          </nav>
          <a
            href="/contact"
            class="hidden rounded-full border border-sky-500/40 bg-slate-900/60 px-4 py-2 text-sm font-semibold text-sky-300 shadow-sm shadow-slate-900/40 transition hover:border-sky-400/60 hover:text-sky-200 md:inline-flex"
          >
            Fale com a gente
          </a>
          <button
            id="mobile-menu-button"
            class="inline-flex items-center justify-center rounded-full border border-slate-700/80 p-2 text-slate-400 transition hover:border-sky-400/60 hover:text-sky-200 md:hidden"
            aria-label="Abrir menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
            type="button"
          >
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 7h16M4 12h16M4 17h16" />
            </svg>
          </button>
        </div>
        <div
          id="mobile-menu"
          class="md:hidden"
          hidden
          role="dialog"
          aria-modal="true"
          aria-label="Menu principal"
        >
          <div class="border-t border-slate-800/60 bg-slate-950/95 px-6 pb-6 pt-3 shadow-lg shadow-slate-950/40">
            <nav class="flex flex-col gap-4 text-base font-medium text-slate-200" aria-label="Navegação principal">
              <a data-menu-initial-focus href="/" class="rounded-xl px-3 py-2 transition hover:bg-slate-900/80 hover:text-sky-200">Home</a>
              <a href="/services" class="rounded-xl px-3 py-2 transition hover:bg-slate-900/80 hover:text-sky-200">Serviços</a>
              <a href="/contact" class="rounded-xl px-3 py-2 transition hover:bg-slate-900/80 hover:text-sky-200">Contato</a>
            </nav>
            <a
              href="/contact"
              class="mt-6 inline-flex w-full items-center justify-center rounded-full bg-sky-500 px-5 py-3 text-sm font-semibold text-slate-950 shadow-md shadow-sky-950/40 transition hover:bg-sky-400"
            >
              Fale com a gente
            </a>
          </div>
        </div>
      </header>

      <div
        id="mobile-menu-overlay"
        class="fixed inset-0 z-30 bg-slate-950/60 backdrop-blur-sm transition-opacity duration-200 opacity-0 md:hidden"
        hidden
      ></div>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-slate-800/60 bg-slate-950/80">
        <div class="mx-auto flex max-w-6xl flex-col gap-6 px-6 py-10 text-sm text-slate-400 md:flex-row md:items-center md:justify-between">
          <div>
            <h4 class="text-base font-semibold text-slate-100">Mezon</h4>
            <p class="mt-1 max-w-sm text-slate-400">
              Produtos digitais pensados para gerar confiança, eficiência e crescimento sustentável.
            </p>
          </div>
          <div class="flex items-center gap-4 text-xs uppercase tracking-[0.2em] text-slate-500">
            <span>© {new Date().getFullYear()} Mezon</span>
            <span class="hidden h-0.5 w-8 rounded-full bg-slate-700 md:block"></span>
            <span>Todos os direitos reservados</span>
          </div>
        </div>
      </footer>
    </div>
    <script type="module">
      const button = document.getElementById('mobile-menu-button');
      const panel = document.getElementById('mobile-menu');
      const overlay = document.getElementById('mobile-menu-overlay');

      const restoreScroll = () => {
        if (Object.prototype.hasOwnProperty.call(document.body.dataset, 'scrollLock')) {
          const previous = document.body.dataset.scrollLock;
          if (previous) {
            document.body.style.overflow = previous;
          } else {
            document.body.style.removeProperty('overflow');
          }
          delete document.body.dataset.scrollLock;
        } else {
          document.body.style.removeProperty('overflow');
        }
      };

      const toggleScroll = (lock) => {
        if (lock) {
          if (!Object.prototype.hasOwnProperty.call(document.body.dataset, 'scrollLock')) {
            document.body.dataset.scrollLock = document.body.style.overflow || '';
          }
          document.body.style.overflow = 'hidden';
        } else {
          restoreScroll();
        }
      };

      if (button && panel) {
        const focusTarget = panel.querySelector('[data-menu-initial-focus]');
        const closeMenu = () => {
          button.setAttribute('aria-expanded', 'false');
          panel.hidden = true;
          if (overlay) {
            overlay.hidden = true;
            overlay.classList.remove('opacity-100');
            overlay.classList.add('opacity-0');
          }
          restoreScroll();
        };

        const openMenu = () => {
          button.setAttribute('aria-expanded', 'true');
          panel.hidden = false;
          if (overlay) {
            overlay.hidden = false;
            overlay.classList.add('opacity-100');
            overlay.classList.remove('opacity-0');
          }
          toggleScroll(true);
          if (focusTarget instanceof HTMLElement) {
            focusTarget.focus();
          }
        };

        const toggleMenu = () => {
          const isExpanded = button.getAttribute('aria-expanded') === 'true';
          if (isExpanded) {
            closeMenu();
          } else {
            openMenu();
          }
        };

        button.addEventListener('click', toggleMenu);

        overlay?.addEventListener('click', closeMenu);

        panel.querySelectorAll('a[href], button[data-close-menu]').forEach((element) => {
          element.addEventListener('click', closeMenu);
        });

        window.addEventListener('resize', () => {
          if (window.innerWidth >= 768) {
            closeMenu();
          }
        });

        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape') {
            closeMenu();
          }
        });
      }
    </script>
  </body>
</html>
